<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.sbbit.jp/article/image/37439/l_bit201912191639287760.jpg);">
  <div class="container">
    <h1>My lists</h1>
    <%= link_to 'Add a new list', new_list_path, class: 'btn btn-outline-secondary'%>
  </div>
</div>

<div class="container m-3">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
        <p>
          <%= list.name%>
          <%= link_to 'See this list', list_path(list), class: 'btn btn-outline-secondary'%>
        </p>
      </div>
    <% end %>
  </div>
</div>

<div class="container m-3">
  <h1><%= @list.name %></h1>
  <p><%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-outline-secondary'%></p>
  <div>
    <% @list.bookmarks.each do |bookmark| %>
      <p><%= bookmark.movie.title %></p>
      <p><%= bookmark.movie.overview %></p>
      <p><%= bookmark.movie.poster_url %></p>
      <p><%= bookmark.movie.rating %></p>
      <p><%= bookmark.comment %></p>
      <p><%= link_to '[X]', list_bookmark_path(@list, bookmark), class: 'btn btn-outline-secondary', data: { turbo_method: :delete, turbo_confirm: "Delete #{bookmark.movie.title}?" }%></p>
    <% end %>
  </div>
   <p><%= link_to 'Back to lists', lists_path, class: 'btn btn-outline-secondary'%></p>
</div>


